
@model IEnumerable<fifness.Models.BAIVIET>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@*<h2>Xem Toàn Bộ Bài Viết</h2>*@
<h2>@Resoucre.Resource.Title</h2>

<p>
    <a href="~/QuanLyBaiViet/Create">@Resoucre.Resource.Add</a>
</p>
<table class="table " method="post">
    <tr class="text-center">

    <th class="text-center">
        @Html.DisplayNameFor(model => model.TENBV)
    </th>
    <th class="text-center">
        @Html.DisplayNameFor(model => model.NOIDUNG)
    </th>
    <th class="text-center">
        @Html.DisplayNameFor(model => model.HINH)
    </th>
    <th class="text-center">
        @Html.DisplayNameFor(model => model.NGAYVIET)
    </th>

    <th class="text-center">
        <label>Action</label>
    </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TENBV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOIDUNG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYVIET)
           
            <td>
                <div class="table-data-feature">
                    <button class="btn btn-primary" data-toggle="tooltip" data-placement="top" id="MABV" onclick="location.href='@Url.Action("Details", "QuanLyBaiViet", new { id = item.MABV })'">

                        @Resoucre.Resource.Detail

                    </button>
                    <button class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Edit" id="MABV" onclick="location.href='@Url.Action("Edit", "QuanLyBaiViet", new { id = item.MABV })'">
                        @Resoucre.Resource.Upate
                    </button>
                    <button class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Delete" id="MABV" onclick="location.href='@Url.Action("Delete", "QuanLyBaiViet", new { id = item.MABV })'" >
                        <p onclick="@Resoucre.Resource.ask">@Resoucre.Resource.Delete</p>
                       
                    </button>

                </div>
            </td>

            @*@Html.ActionLink("Sửa", "Edit", new { id = item.MABV }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MABV }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MABV }, new { onclick = "return confirm('Are you sure?');" })*@

        </tr>
    }

</table>


<script>
    function myFunction() {
        var x = document.URL;
        return x;
    }
    const urlString = myFunction();
    const id = urlString.substr(-2, 2);
    console.log(id.indexOf('/'));
    if (id.indexOf('/') >= 0) {
        document.getElementById('MABV').value = id.substr(1, 1);
        // console.log(id.substr(1,1));
    }
    else {
        document.getElementById('MABV').value = id
        // console.log(id);
    }

      // console.log(urlString);
</script>